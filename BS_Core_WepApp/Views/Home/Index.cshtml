@model BS_Core_WepApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form asp-action="Index" class="login100-form validate-form">
                <div class="logo">
                   @*  <img src="../img/newjoy2.jpg" alt="Newjoy"> *@
                </div>
                <div class="wrap-input100 validate-input" data-validate="Eposta gereklidir: ex@abc.xyz">
                    <input asp-for="Email" class="input100" type="text" name="Email">
                    @* <span class="focus-input100"></span>
                    <span class="label-input100">Eposta</span> *@
                </div>

                <div class="wrap-input100 validate-input" data-validate="Parola gereklidir.">
                    <input asp-for="Password" class="input100" type="password" name="Password">
                    @* <span class="focus-input100"></span>
                    <span class="label-input100">Parola</span> *@
                </div>

                <div class="flex-sb-m w-full p-t-3 p-b-32">
                    <div class="contact100-form-checkbox">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                        <label class="label-checkbox100" for="ckb1">Beni hatırla</label>
                    </div>
                    <div>
                        <a asp-controller="Account" asp-action="ForgotPassword" class="txt1">Parolamı unuttum</a>
                    </div>
                </div>
                <div class="container-login100-form-btn">
                    <input type="submit" value="Giriş Yap" class="login100-form-btn" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>

                @* <div class="text-center p-t-46 p-b-20">
                    <span class="txt2">
                        <strong>
                            <a asp-controller="Account" asp-action="SignUp" class="txt1">Sign Up </a> or Using
                        </strong>
                    </span>
                </div>
                <div class="login100-form-social flex-c-m">
                    <a href="#" class="login100-form-social-item flex-c-m bg1 m-r-5">
                        <i class="fa fa-facebook-f" aria-hidden="true"></i>
                    </a>
                    <a href="#" class="login100-form-social-item flex-c-m bg2 m-r-5">
                        <i class="fa fa-twitter" aria-hidden="true"></i>
                    </a>
                </div> *@
            </form>
            <div class="login100-more_bg_index">
            </div>
        </div>
    </div>
</div>